@{
    List<ProductCategory> data = ViewData["Data"] as List<ProductCategory> ?? [];
    ViewData["title"] = "Danh mục sản phẩm";
}
<div class="content-header">
    <div>
        <h2 class="content-title card-title">@ViewData["title"]</h2>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary btn-sm rounded">Tạo</a>
    </div>
</div>
<div class="card mb-4">
    <header class="card-header">
        <div class="row gx-3">
            <div class="col-lg-4 col-md-6 me-auto">
                <input type="text" placeholder="Search..." class="form-control" />
            </div>
            <div class="col-lg-2 col-md-3 col-6">
                <select class="form-select">
                    <option>Status</option>
                    <option>Active</option>
                    <option>Disabled</option>
                    <option>Show all</option>
                </select>
            </div>
            <div class="col-lg-2 col-md-3 col-6">
                <select class="form-select">
                    <option>Show 20</option>
                    <option>Show 30</option>
                    <option>Show 40</option>
                </select>
            </div>
        </div>
    </header>
    <!-- card-header end// -->
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" />
                            </div>
                        </th>
                        <th>#ID</th>
                        <th>Tên</th>
                        <th>Slug</th>
                        <th>Hình ảnh</th>
                        <th>Ngày thêm</th>
                        <th class="text-end">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var v in data)
                    {
                        <tr>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" />
                                </div>
                            </td>
                            <td>@v.Id</td>
                            <td><b>@v.Name</b></td>
                            <td>@v.Slug</td>
                            <td>
                                <img style="width:50px; height:50px" src="@v.Image" />
                            </td>
                            <td>@v.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-sm font-sm rounded btn-brand">
                                    <i class="material-icons md-edit"></i> Edit
                                </a>
                                <form style="display:inline-block" asp-action="Delete" method="post">
                                    <input type="hidden" name="id" value="@v.Id" />
                                    <button type="submit" class="btn btn-sm font-sm btn-light rounded">
                                        <i class="material-icons md-delete_forever"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    @if(data.Count()==0)
                    {
                        <tr>
                            <td colspan="100%" style="text-align: center">Không có sản phẩm nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div> <!-- table-responsive//end -->
    </div>
    <!-- card-body end// -->
</div>
<div class="pagination-area mt-30 mb-50">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-start">
            <li class="page-item active"><a class="page-link" href="#">01</a></li>
            <li class="page-item"><a class="page-link" href="#">02</a></li>
            <li class="page-item"><a class="page-link" href="#">03</a></li>
            <li class="page-item"><a class="page-link dot" href="#">...</a></li>
            <li class="page-item"><a class="page-link" href="#">16</a></li>
            <li class="page-item"><a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a></li>
        </ul>
    </nav>
</div>